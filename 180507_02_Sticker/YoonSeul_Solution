#include <iostream>
using namespace std;

int max(int x, int y) {
	return (x < y ? x : y);
}

int main() {
	int T, N;
	int input[2][100001];
	int arr[2][100001];
	cin >> T;

	int i = 0;
	while (T - i > 0) {
		cin >> N;
		for (int i = 1; i <= N; i++)
			cin >> input[0][i];
		for (int i = 1; i <= N; i++)
			cin >> input[1][i];

		arr[0][0] = 0;
		arr[1][0] = 0;
		arr[0][1] = input[0][1];
		arr[1][1] = input[1][1];

		for (int i = 2; i <= N; i++) {
			arr[0][i] = max(arr[1][i - 1], arr[1][i - 2]) + input[0][i];
			arr[1][i] = max(arr[0][i - 1], arr[0][i - 2]) + input[1][i];
		}

		i++;

		cout << max(arr[0][N], arr[1][N]) << endl;
	}

	return 0;
}
