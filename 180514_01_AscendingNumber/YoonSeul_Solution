#include <iostream>
using namespace std;


int main() {
	int N;
	int arr[1001][10];

	cin >> N;

	for (int i = 0; i < 10; i++)
		arr[1][i] = 1;

	for (int i = 2; i <= N; i++) {
		for (int j = 0; j < 10; j++) {
			for (int k = j; k < 10; k++)
				arr[i][j] = (arr[i][j] + arr[i - 1][k]) % 10007;
		}
	}

	int result = 0;
	for (int i = 0; i < 10; i++)
		result += arr[N][i] % 10007;

	cout << result << endl;
	return 0;

}
